<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_day"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#000000"
        tools:text="MON" />

    <TextView
        android:id="@+id/text_view_add_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="56dp"
        android:text="Add session time"
        android:textColor="#000000"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/layout_multi_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="12dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:showDividers="middle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_timings_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_view_start_session_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="09:00 AM"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_view_end_session_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12:00 PM"
                    android:textColor="#000000"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_discard_session_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/chip_delete"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_add_session_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="add session time 2"
            android:textColor="#000000"/>

        <LinearLayout
            android:id="@+id/layout_session_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_timings_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_view_start_session_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="09:00 AM"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/text_view_end_session_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12:00 PM"
                    android:textColor="#000000"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_discard_session_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/chip_delete"
                tools:ignore="MissingPrefix" />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>